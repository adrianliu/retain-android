<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="horizontal"
  android:layout_gravity="center_horizontal"
  android:gravity="left"
  android:paddingLeft="3dip" 
  android:layout_marginLeft="1dip" 
  android:scrollbars="none" 
  android:paddingBottom="0dip" 
  android:fadingEdge="horizontal"
  >

	<TextView android:layout_alignParentLeft="true" 
			  android:text="@string/app_name" 
			  android:id="@+id/TextView01" 
			  android:textColor="@color/white" 
			  android:layout_gravity="center"
			  android:gravity="center"
			  android:textStyle="bold" 
			  android:textSize="20dip"
			  android:layout_width="wrap_content" 
			  android:background="@color/dark_grey"
			  android:layout_height="fill_parent"></TextView>

	
	<LinearLayout android:background="@color/dark_grey"
	android:id="@+id/OrderButtons"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:gravity="right"
	android:orientation="horizontal"
	android:layout_toRightOf="@id/TextView01"
	android:layout_margin="0dip"
	android:layout_alignParentRight="true" 
	>
	
		<ToggleButton android:layout_alignParentRight="true" 
				android:textOn="Site"
				android:textOff="Site" 
				android:id="@+id/Button02" 
				android:background="@layout/orderby_button" 
				android:textColor="@color/light_grey"
				android:gravity="center"
				android:textSize="20dip"
				android:layout_width="wrap_content" 
				android:layout_height="fill_parent" 
	android:layout_margin="0dip"></ToggleButton>
				
	 	<ToggleButton 
	 			android:layout_toLeftOf="@id/Button02" 
	 			android:textOn="Date" 
	 			android:textOff="Date" 
	 			android:id="@+id/Button01" 
				  android:gravity="center"
	 			android:background="@layout/orderby_button" 
	 			android:textColor="@color/light_grey" 
	 			android:textSize="20dip"
	 			android:layout_width="wrap_content" 
	 			android:layout_height="fill_parent" 
				android:layout_margin="0dip"
	 			></ToggleButton>
		
	
	</LinearLayout>
  
</RelativeLayout>
